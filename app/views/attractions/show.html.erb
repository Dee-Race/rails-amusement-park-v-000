<h1><%= @attraction.name %></h1>

<h3>Min Height: <%= @attraction.min_height%></h3>
<h3>Nausea Rating: <%= @attraction.nausea_rating%></h3>
<h3>Ticket: <%= @attraction.tickets%></h3>

  <%= form_tag('/rides/new') do  %>
  <%= hidden_field_tag :user_id, @user.id %>
  <%= hidden_field_tag :attraction_id, @attraction.id %>
  <%= submit_tag_value="Go on this ride" %>
  <% end %>

  <% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
  <% end %>
